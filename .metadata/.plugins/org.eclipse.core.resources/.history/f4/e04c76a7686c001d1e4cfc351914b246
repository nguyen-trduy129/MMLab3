#include "mode.h"
int redTime =0, greenTime =0, yellowTime =0;

void modeRun(){
	switch(mode){
	case INIT:
		mode =1;
		break;
	case MOD1:
		trafficLightRun();

		if (isButton1Pressed()){
			mode =2;
		}
		break;
	case MOD2:
		ledRedBlink();

		if (isButton1Pressed()){
			mode =3;
		}

		if (isButton2Pressed()){

		}

		if (isButton3Pressed()){
			mode =1;
		}
		break;
	case MOD3:
		ledYellowBlink();

		if (isButton1Pressed()){
			mode =4;
		}

		if (isButton2Pressed()){

		}

		if (isButton3Pressed()){
			mode =1;
		}
		break;
	case MOD4:
		ledGreenBlink();

		if (isButton1Pressed()){
			mode =1;
		}

		if (isButton2Pressed()){

		}

		if (isButton3Pressed()){
			mode =1;
		}
		break;
	default:
		break;
	}
}


