#include "mode.h"

void modeRun(){
	switch(mode){
	case INIT:
		mode =1;
		setTimer1(3);
		setTimer2(5);
		setTimer3(7);
		setTimer4(11);
		break;
	case MOD1:
		trafficLightRun();

		if (isButton1Pressed()){
			mode =2;
		}
		break;
	case MOD2:
		ledRedBlink();

		if (isButton1Pressed()){
			mode =3;
		}

		if (isButton2Pressed()){
			if (redTime <99) redTime++;
			else redTime =0;
		}

		if (isButton3Pressed()){
			mode =1;
		}
		break;
	case MOD3:
		ledYellowBlink();

		if (isButton1Pressed()){
			mode =4;
		}

		if (isButton2Pressed()){
			if (yellowTime <99) yellowTime++;
			else yellowTime =0;
		}

		if (isButton3Pressed()){
			mode =1;
		}
		break;
	case MOD4:
		ledGreenBlink();

		if (isButton1Pressed()){
			mode =1;
		}

		if (isButton2Pressed()){
			if (greenTime <99) greenTime++;
			else greenTime=0;
		}

		if (isButton3Pressed()){
			mode =1;
		}
		break;
	default:
		break;
	}
}


